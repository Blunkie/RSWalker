program new;
{$I SRL/OSR.simba}
{$I RSWalker2/Walker.simba}

var
  finder:TRSPosFinder;
  loc:TPoint;
  t: Double;
begin
  finder.Init(w_getClientPID());
  finder.UpdateMap(True);
  AddOnTerminate(@finder.Free);

  while 1 do
  begin
    t := PerformanceTimer();
    loc := finder.GetLocalPos();
    ClearDebug();
    WriteLn('>>> ', loc,' used: ', Round(PerformanceTimer() - t,3),'ms' );
    WriteLn('>>> 0x', HexStr(finder.addr));
    finder.DebugPos(loc);
  end;
end;
